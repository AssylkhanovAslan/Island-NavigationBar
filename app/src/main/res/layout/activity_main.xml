<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/islandbar_using_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create IslandNavigationBar with Menu" />

    <Button
        android:id="@+id/islandbar_using_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create IslandNavigationBar with XML" />

    <Button
        android:id="@+id/islandbar_stroke_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IslandNavigationBar (items with stroke background)" />

</LinearLayout>