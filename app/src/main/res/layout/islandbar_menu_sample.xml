<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <com.kartollika.views.islandnavigationbar.IslandNavigationBar
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/navigation_bar_background"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:barDistribution="spread"
        app:barMenu="@menu/menu_bottombar"
        app:barSelectedTab="1"
        app:barToggleInterpolator="@android:anim/decelerate_interpolator" />

</FrameLayout>